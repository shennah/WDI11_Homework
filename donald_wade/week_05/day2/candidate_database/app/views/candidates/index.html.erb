<p id="notice"><%= notice %></p>

<h1>Listing Candidates</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Image</th>
      <th>Recommendation1</th>
      <th>Recommendation2</th>
      <th>Recommendation3</th>
      <th>Employer</th>
      <th>Work history</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.last_name %></td>
        <td><%= candidate.email %></td>
        <td><%= candidate.image %></td>
        <td><%= candidate.recommendation1 %></td>
        <td><%= candidate.recommendation2 %></td>
        <td><%= candidate.recommendation3 %></td>
        <td><%= candidate.employer %></td>
        <td><%= candidate.work_history %></td>
        <td><%= link_to 'Show', candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

